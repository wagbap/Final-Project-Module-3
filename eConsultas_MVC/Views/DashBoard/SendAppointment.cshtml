@model DoctorMV
@{
    Layout = "_AdminLayout";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Make Appointement</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<!-- 2 column grid layout with text inputs for the first and last names -->

<section style="background-color: #fff;">
    <div class="container py-5">

        <div class="row">

            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label" for="form6Example1">Full name</label>
                        <input type="text" id="form6Example1" class="form-control" value="@Model.FullName" readonly />
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label" for="form6Example2">@Model.Especialization</label>
                        <input type="text" id="form6Example2" class="form-control" value="@Model.Especialization" readonly />
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <!-- Text input -->
                <div class="col">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form6Example3">Email</label>
                        <input type="text" id="form6Example3" class="form-control" value="@Model.Email" readonly />
                    </div>
                </div>

                <!-- Text input -->
                <div class="col">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form6Example4">Phone Number</label>
                        <input type="text" id="form6Example4" class="form-control" value="@Model.PhoneNumber" readonly />
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <!-- Email input -->
                <div class="col">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form6Example5">Region</label>
                        <input type="text" id="form6Example5" class="form-control" value="@Model.Region" readonly />
                    </div>
                </div>

                <!-- Number input -->
                <div class="col">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form6Example6">City</label>
                        <input type="text" id="form6Example6" class="form-control" value="@Model.City" readonly />
                    </div>
                </div>

                <!-- Message input -->
                <div class="col">
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form6Example6">Address</label>
                        <input type="text" id="form6Example6" class="form-control" value="@Model.Address" readonly />
                    </div>
                </div>
            </div>
            <form method="post" asp-action="AddApointment">
                <input name="doctorId" value="@Model.UserId" hidden />
                <div class="form-outline mb-4">
                    <label class="form-label" for="form6Example7">Additional information about appointment</label>
                    <textarea class="form-control" name="patientMessage" rows="4"></textarea>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Send Appointment</button>
            </form>

        </div>

    </div>
</section>
@model LibBiz.Models.User

<h2>Create User</h2>

<form asp-controller="Login" asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Email</label>
        <input type="text" class="form-control" id="Email" name="Email" required>
    </div>

    <div class="form-group">
        <label for="UserType">User Type</label>
        <div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="UserType" id="Doctor" value="Doctor" checked>
                <label class="form-check-label" for="Doctor">
                    Doctor
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="UserType" id="Patient" value="Patient">
                <label class="form-check-label" for="Patient">
                    Patient
                </label>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
